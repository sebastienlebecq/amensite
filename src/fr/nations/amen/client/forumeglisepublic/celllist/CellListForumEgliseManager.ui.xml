<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:fr.nations.amen.client.forumeglisepublic.celllist">

	<ui:style>
	.cellStyle {
		border: 1px solid;
		padding: 3px;
		width: 300px;
	}
	
	.pager {
		float: left;
	}
	
	.image {
		width: 100px;
		height: 150px;
	}
	
	.anchor {
		color: blue;
		text-decoration: underline;
	}
	
	.title {
		font-size: 10pt;
	}
	
	.eastPanel {
		float: right;
		direction: ltr;
		overflow: auto;
	}
	
	.westPanel {
		background-color: #E4EFFF;
		direction: rtl;
		overflow: auto;
		margin-right: 0;
	}
	
	.northPanel {
		bachground-color: #E0FFFF;
		direction: ltr;
		margin-left: auto;
		margin-right: auto;
	}
	
	.southPanel {
		background-color: #99C;
	}
	
	.centerPanel {
		background-color: #FFC;
	}
	
	.full {
		width: 100%;
		height: 100%;
	}
	
	@external .gwt-SplitLayoutPanel-HDragger;
	.gwt-SplitLayoutPanel-HDragger {
		width: 0px !important;
		background: red;
	}
	</ui:style>

	<g:SplitLayoutPanel>

		<g:west size='320' unit='EM'>
			<g:CustomScrollPanel stylePrimaryName="{style.westPanel}">
				<g:FlowPanel>
<!-- 					<g:HorizontalPanel styleName="{style.northPanel}"> -->
<!-- 						<g:HTML> -->
<!-- 							<b>Cat√©gorie des Videos :</b> -->
<!-- 						</g:HTML> -->
<!-- 						<g:ListBox ui:field="categories"></g:ListBox> -->
<!-- 					</g:HorizontalPanel> -->
					<c:CellList ui:field="souvenirList"></c:CellList>

					<c:PageSizePager ui:field="pagerShowMore"
						increment="12" stylePrimaryName="{style.pager}"></c:PageSizePager>

					<c:SimplePager ui:field="pager" location="CENTER"
						stylePrimaryName="{style.pager}" height="50"></c:SimplePager>

				</g:FlowPanel>
			</g:CustomScrollPanel>
		</g:west>

		<g:center size='750' unit='EM'>
<!-- 		<g:CustomScrollPanel> -->
<!-- 				<g:FlowPanel> -->

				<s:ForumEgliseManagerForm ui:field='souvenirManagerForm' />
<!-- 		</g:FlowPanel> -->
<!-- 			</g:CustomScrollPanel> -->
		</g:center>

	</g:SplitLayoutPanel>



</ui:UiBinder>
