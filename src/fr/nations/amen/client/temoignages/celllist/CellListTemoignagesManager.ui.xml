<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:fr.nations.amen.client.temoignages.celllist">

	<ui:style>
		.cellStyle {
			border: 1px solid;
			padding: 3px;
			width: 300px;
		}
		
		.image {
			width: 100px;
			height: 150px;
		}
		
		.anchor {
			color: blue;
			text-decoration: underline;
		}
		
		.title {
			font-size: 18pt;
		}
		
		.eastPanel {
			background-color: #F60;
		}
		
		.westPanel {
			background-color: #EEE;
		}
		
		.northPanel {
			bachground-color: #E0FFFF;
		}
		
		.southPanel {
			background-color: #99C;
		}
		
		.centerPanel {
			background-color: #FFC;
		}
	</ui:style>

	<g:SplitLayoutPanel>

		<!-- <g:north size='50' unit='EM'> -->
		<!-- <g:FlowPanel styleName="{style.northPanel}"> -->
		<!-- <g:HTML> -->
		<!-- <H1>Actualit√©s d&apos;Amen</H1> -->
		<!-- </g:HTML> -->
		<!-- </g:FlowPanel> -->
		<!-- </g:north> -->

		<g:west size='150' unit='EM'>
			<g:CustomScrollPanel>
				<g:FlowPanel>
					<c:CellList ui:field="temoignageList"></c:CellList>
					<c:PageSizePager ui:field="pagerShowMore"
						increment="12"></c:PageSizePager>
					<!-- <c:SimplePager ui:field="pager" location="CENTER"></c:SimplePager> -->
				</g:FlowPanel>
			</g:CustomScrollPanel>
		</g:west>

		<g:south size="30">
			<g:FlowPanel>
				<c:SimplePager ui:field="pager" location="CENTER"></c:SimplePager>
			</g:FlowPanel>
		</g:south>



		<g:center size='100' unit='EM'>
			<g:CustomScrollPanel>
				<g:HTMLPanel>
					<table>
						<tr>
							<td>
								<s:TemoignagesManagerForm ui:field='temoignagesManagerForm' />
							</td>
					
						</tr>
						<hr
							style="width:100EM; color:black; background-color:black; height:2px;" />
					</table>

				</g:HTMLPanel>
			</g:CustomScrollPanel>
		</g:center>



	</g:SplitLayoutPanel>



</ui:UiBinder>
