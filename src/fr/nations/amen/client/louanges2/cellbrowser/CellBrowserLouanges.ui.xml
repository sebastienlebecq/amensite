	<ui:style>
		.cellStyle {
			border: 1px solid;
			padding: 3px;
			width: 300px;
		}
		
		.image {
			width: 100px;
			height: 150px;
		}
		
		.anchor {
			color: blue;
			text-decoration: underline;
		}
		
		.title {
			font-size: 18pt;
		}
		
		.eastPanel {
			background-color: #F60;
		}
		
		.westPanel {
			background-color: #EEE;
		}
		
		.northPanel {
			bachground-color: #E0FFFF;
		}
		
		.southPanel {
			background-color: #99C;
		}
		
		.centerPanel {
			background-color: #FFC;
		}
		
		.full {
			width: 100%;
			height: 100%;
		}
	</ui:style>

